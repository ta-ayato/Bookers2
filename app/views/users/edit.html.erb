<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <% if @user.errors.any? %>
        <div class="error_explanation">
          <h3><%= @user.errors.count %>errors prohibited this obj from being saved:</h3>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <h6 for="user_name">Name</h6>
          <%= f.text_field :name, id: "user_name" %>
        </div>
        <div class="form-group">
          <h6 for="user_image">Image</h6>
          <%= f.file_field :profile_image, accept: "image/*", id: "user_profile_image" %>
        </div>
        <div class="form-group">
          <h6 for="user_introduction">Introduction</h6>
          <%= f.text_area :introduction, id: "user_introduction" %>
        </div>
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>
