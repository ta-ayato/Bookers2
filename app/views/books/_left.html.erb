<div class="col-md-3">
    <h2>User info</h2>
    <%= image_tag user.get_profile_image(100, 100) %>
    <table class="table">
        <tbody>
            <tr>
                <th>name</th>
                <th><%= user.name %></th>
            </tr>
            <tr>
                <th>introduction</th>
                <th><%= user.introduction %></th>
            </tr>
        </tbody>
    </table>
    <div class="row">
        <a class="btn btn-outline-secondary btn-block" href="/users/<%= user.id %>/edit">
            <i class="fa-solid fa-user-gear"></i>
        </a>
    </div>
<h2 class="mt-3">New book</h2>
    <%= form_with url: books_path, model: Book.new do |f| %>
        <div class="form-group">
            <h6>Title</h6>
            <%= f.text_field :title %>
        </div>
        <div class="form-group">
            <h6>Opinion</h6>
            <%= f.text_area :body %>
        </div>
        <div class="form-group">
            <%= f.submit "Create Book", class: "btn btn-success" %>
        </div>
    <% end %>
</div>